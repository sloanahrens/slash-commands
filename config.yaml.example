# Portable Commands Configuration
# Copy this file to config.yaml and add your repos
# config.yaml is gitignored and will not be committed

# Base path - always use ~/code/mono-claude
base_path: ~/code/mono-claude

# Repository definitions
# Each repo needs:
#   - name: directory name (required)
#   - group: 'devops' or 'apps' (required)
#   - aliases: list of fuzzy match shortcuts (optional)
#   - work_dir: subdirectory to run commands from (optional)
#   - language: typescript | go | python | rust | shell (optional, auto-detected if omitted)
#   - commands: override default commands (optional)

repos:
  # DevOps/Infrastructure examples
  - name: my-infra-pulumi
    group: devops
    aliases: [pulumi, infra]
    language: typescript

  - name: my-terraform
    group: devops
    aliases: [tf, terraform]
    language: shell

  # Application examples
  - name: my-nextjs-app
    group: apps
    aliases: [app, next]
    # language auto-detected from package.json

  - name: my-go-api
    group: apps
    aliases: [api]
    language: go
    work_dir: backend
    commands:
      test: go test ./...
      lint: golangci-lint run
      build: go build ./cmd/api

  - name: my-python-service
    group: apps
    aliases: [py, service]
    language: python
    commands:
      test: pytest
      lint: ruff check .
      typecheck: mypy .

  # Monorepo with subdirectories
  - name: my-monorepo
    group: apps
    aliases: [mono]
    work_dir: packages/app
    commands:
      test: pnpm test
      lint: pnpm lint
      build: pnpm build
