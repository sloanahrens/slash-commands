# Trabian Workspace Configuration (trabian branch)
# Copy this file to config.yaml
# config.yaml is gitignored and will not be committed

# Trabian product workspace
base_path: ~/code/trabian-ai

# Built-in trabian components (always present)
# These are fixed paths within the trabian mono-repo
builtin:
  - name: trabian-cli
    group: packages
    path: packages/trabian-cli
    language: typescript
    commands:
      test: npm test
      lint: npm run lint
      build: npm run build

  - name: trabian-server
    group: mcp
    path: mcp/trabian-server
    language: python
    commands:
      test: uv run pytest
      lint: uv run ruff check .
      typecheck: uv run mypy .

# Dynamic directories (auto-discovered)
# worktrees_dir: scans for git worktrees (feature branches)
# clones_config: reads trabian's clone-config.json for reference repos
worktrees_dir: .trees
clones_config: clones/clone-config.json

# All working code repos location
code_path: ~/code

# Working repos at code_path
# Added via /sloan/add-repo or manually
repos:
