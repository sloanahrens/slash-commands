# Workspace Configuration
# Copy this file to config.yaml
# config.yaml is gitignored and will not be committed

# Primary workspace (monorepo or main project)
base_path: ~/code/my-workspace

# Built-in components (fixed paths within base_path)
# These are packages/apps that are always present in your monorepo
builtin:
  - name: my-cli
    group: packages
    path: packages/my-cli
    language: typescript
    commands:
      test: npm test
      lint: npm run lint
      build: npm run build

  - name: my-server
    group: apps
    path: apps/my-server
    language: python
    commands:
      test: uv run pytest
      lint: uv run ruff check .
      typecheck: uv run mypy .

# Dynamic directories (auto-discovered)
# worktrees_dir: scans for git worktrees (feature branches)
# clones_config: reads clone-config.json for reference repos
worktrees_dir: .trees
clones_config: clones/clone-config.json

# All working code repos location
code_path: ~/code

# Working repos at code_path
# Added via /add-repo or manually
repos:
  # Example: active project
  # - name: my-project
  #   group: projects
  #   aliases: [proj, mp]
  #   language: typescript
